<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.mkrcoding.coloriageglouton.Etape2Controller">
    <Label text="Entrez les noms des sommets :" />
    <TextField fx:id="tfNomSommet" onKeyPressed="#onEnter" promptText="Nom du sommet" />
    <ListView fx:id="lvSommets" prefHeight="400.0" prefWidth="432.0" />
    <Button onAction="#onAddSommet" text="Ajouter" />
    <Button onAction="#onNext" text="Suivant" />
</VBox>
